<!DOCTYPE html>
<html lang="en">
  <%- include('./includes/head.ejs',{title:"Profile"}) %>

  <body>
    <%- include('./includes/header.ejs') %>
    <section class="text-gray-600 body-font">
      <div
        class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center"
      >
        <div
          class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0 flex flex-col justify-center items-center"
        >
          <img
            class="object-cover object-center rounded"
            alt="hero"
            src="/assets/profile.svg"
          />
          <form
            class="flex items-center space-x-6 mt-10"
            enctype="multipart/form-data"
            action="/api/v1/user/profile"
            method="post"
          >
            <label class="block">
              <span class="sr-only">Choose profile photo</span>
              <input
                type="file"
                name="profile"
                class="block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100"
              />
            </label>
            <button
              type="submit"
              class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0 m-auto"
            >
              Upload
              <svg
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                class="w-4 h-4 ml-1"
                viewBox="0 0 24 24"
              >
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </button>
          </form>
        </div>
        <div
          class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center"
        >
          <div class="shrink-0 m-auto">
            <% if(!data.isProfile){ %>
            <img
              class="h-36 w-36 object-cover rounded-full"
              src="https://images.unsplash.com/photo-1580489944761-15a19d654956?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1361&q=80"
              alt="Current profile photo"
            />
            <% }else{ %>
            <img
              class="h-36 w-36 object-cover rounded-full"
              src="<%= '/'+data.profileUrl %>"
              alt="Current profile photo"
            />
            <% } %>
          </div>
          <h1
            class="title-font sm:text-4xl text-4xl mb-4 font-medium text-gray-900 m-auto mt-3 mb-3"
          >
            Name : <%= data.name %>
          </h1>
          <h1
            class="title-font sm:text-4xl text-4xl mb-4 font-medium text-gray-900 m-auto"
          >
            Email : <%= data.email %>
          </h1>
          <div
            class="flex items-center flex items-center w-full justify-center mt-3 mb-3"
          >
            <form action="/api/v1/user/logoutall" method="post">
              <button
                class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0 m-auto"
              >
                Logout From All Devices
                <svg
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  class="w-4 h-4 ml-1"
                  viewBox="0 0 24 24"
                >
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
    <%- include('./includes/footer.ejs') %>
  </body>
</html>
