<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      setTimeout(() => {
        document.getElementById('toast-warning').style = 'display:none'
      }, 3000)
    </script>
  </head>
  <body>
    <%- include('./includes/header.ejs') %>
    <section class="text-gray-600 body-font">
      <div
        class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center"
      >
        <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
          <img
            class="object-cover object-center rounded"
            alt="hero"
            src="/assets/profile.svg"
          />
        </div>
        <div
          class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center"
        >
          <h1
            class="title-font sm:text-4xl text-4xl mb-4 font-medium text-gray-900 m-auto"
          >
            Name : <%= data.name %>
          </h1>
          <h1
            class="title-font sm:text-4xl text-4xl mb-4 font-medium text-gray-900 m-auto"
          >
            Email : <%= data.email %>
          </h1>
          <div
            class="flex items-center flex items-center w-full justify-center"
          >
            <form action="/api/v1/user/logoutall" method="post">
              <button
                class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0 m-auto"
              >
                Logout From All Devices
                <svg
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  class="w-4 h-4 ml-1"
                  viewBox="0 0 24 24"
                >
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
    <%- include('./includes/footer.ejs') %>
  </body>
</html>
